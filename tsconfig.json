{
  "compilerOptions": {
    "types": ["jest", "cypress", "node"],
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src",
    "jest.config.js",
    "webpack.config.js",
    "cypress.config.ts"
  ],
  "exclude": [
    "src/main/test/cypress/tsconfig.cypress.json"
  ],
}
